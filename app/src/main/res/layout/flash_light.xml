<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >
    <FrameLayout
	    android:layout_width="fill_parent"
	    android:layout_height="55dip"
	    android:background="@color/title_blue" >
        <ImageButton
            android:id="@+id/ib_flash_light_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/back_btn_selector"
            android:layout_gravity="left|center" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="@string/flash_lighting_tips"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center" />

    <ImageView
        android:id="@+id/iv_flash_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:src="@mipmap/flash_background" />
    
    <!--  -->

    <LinearLayout
        android:id="@+id/ll_flash_light_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" 
        android:visibility="gone"
        >

        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="20dip"
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/flash_activity_turn_red_tip"
            android:textColor="@color/red"
            android:textSize="18sp" />

    	<FrameLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" >
    
	        <ImageView
	            
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="10dip"
	            android:paddingRight="10dip"
	            android:src="@mipmap/flash_background2"
	             />
	        <ImageView
	            android:id="@+id/iv_flash_light_success"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="10dip"
	            android:paddingRight="10dip"
	            android:src="@mipmap/flash_background2_red_light"
	             />
		</FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/ib_flash_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_marginBottom="5dip"
                android:src="@drawable/flash_light_btn_selecor" />

            <TextView
                android:id="@+id/tv_flash_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/btn_blue_color"
                android:text="@string/flash_lighting_btn_tips" />

        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
